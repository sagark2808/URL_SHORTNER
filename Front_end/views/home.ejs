<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>URL Shortener</h1>

    <form method="POST" action="/url">
      <input type="text" name="url" placeholder="Enter your original URL" required />
      <button type="submit">Generate Short URL</button>
    </form>

    <% if (locals.id) { %>
    <p>Short URL: <a href="/url/<%= id %>" target="_blank">http://localhost:8005/url/<%= id %></a></p>
    <% } %>

    <% if (locals.urls) { %>
    <h2>Your URLs</h2>
    <table>
      <thead>
        <tr>
          <th>S. No</th>
          <th>ShortID</th>
          <th>Original URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= url.shortId %></td>
          <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </div>
</body>
</html>
